!!! 5
%html{ :lang => "en", "xml:lang" => "en", :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
    - if @description
      %meta{ "name" => "description", "content" => @description }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
    %title= @title
    %link{ :href => "/css/master.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    - local_stylesheet_link_tag('local')
    %link{ :href => "/articles.xml", :rel => "alternate", :type => "application/atom+xml" }
    = haml :analytics, :layout => false
    %script{ :type => "text/javascript", :src => "js/shCore.js"}
    %script{ :type => "text/javascript", :src => "css/shBrushJScript.js"}
    %link{ :href => "css/shCore.css", :rel => "stylesheet", :type => "text/css"}
    %link{ :href => "css/shThemeDefault.css", :rel => "stylesheet", :type => "text/css"}
    
  %body
    %header
      #logo
        - @heading.split.each do |word|
          %h1= word
        -#%h2= @subtitle

      
    = yield
    %footer
